<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data> </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bgr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/text_item_header_choose_your_heroes"
            android:textAllCaps="true"
            android:paddingStart="@dimen/dim_24dp"
            android:paddingEnd="@dimen/dim_24dp"
            android:textColor="@color/text_color_white"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dim_12dp"
            android:textSize="@dimen/text_24sp"
            android:fontFamily="@font/comic"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>