<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_16dp">

        <ImageView
            android:id="@+id/imageViewDialogImage"
            android:layout_width="@dimen/follow_constraints"
            android:layout_height="@dimen/follow_constraints"
            android:layout_marginEnd="12dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toTopOf="@id/textViewDialogTitle"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4"
            tools:src="@android:drawable/btn_dialog"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textViewDialogTitle"
            style="@style/TitleText.Big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_16dp"
            android:gravity="center"
            tools:text="Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewDialogImage" />

        <TextView
            android:id="@+id/textViewDialogMessage"
            style="@style/BodyText.Large"
            android:layout_width="@dimen/follow_constraints"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDialogTitle"
            tools:text="Message... Lorem ipsum dolo sato si amet. Lorem ipsum dolo sato si amet. Lorem ipsum dolo sato si amet. Lorem ipsum dolo sato si amet" />

        <com.cmdv.common.components.button.CustomButtonView
            android:id="@+id/buttonPositive"
            android:layout_width="@dimen/follow_constraints"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonNegative"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDialogMessage" />

        <com.cmdv.common.components.button.CustomButtonView
            android:id="@+id/buttonNegative"
            android:layout_width="@dimen/follow_constraints"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonPositive"
            app:layout_constraintTop_toBottomOf="@+id/textViewDialogMessage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>